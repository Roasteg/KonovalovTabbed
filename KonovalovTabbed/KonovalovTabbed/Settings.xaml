<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Settings"
             x:Class="KonovalovTabbed.Settings">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="sfont"
                Text="Dark theme"
                Clicked="sfont_Clicked"
                />
            <Button x:Name="lfont"
                Text="Light theme"
                Clicked="lfont_Clicked"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>